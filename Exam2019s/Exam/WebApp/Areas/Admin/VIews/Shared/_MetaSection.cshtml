﻿@using BLL.App.DTO
@using ee.itcollege.aleksi.Contracts.DAL.Base
@model ee.itcollege.aleksi.Contracts.DAL.Base.IDomainEntityBaseMetadata

@{
    var isSoftDeleteEntity = Model is ISoftDeleteEntity;
}
<dl class="row">
    <dt class="col-sm-2">
        @Resources.Domain.Common.CreatedBy
    </dt>
     <dd class="col-sm-10">
         @Html.DisplayFor(model => model.CreatedBy)
     </dd>
     <dt class="col-sm-2">
         @Resources.Domain.Common.CreatedAt
     </dt>
     <dd class="col-sm-10">
         @Html.DisplayFor(model => model.CreatedAt)
     </dd>
     <dt class="col-sm-2">
         @Resources.Domain.Common.ChangedBy
     </dt>
     <dd class="col-sm-10">
         @Html.DisplayFor(model => model.ChangedBy)
     </dd>
     <dt class="col-sm-2">
         @Resources.Domain.Common.ChangedAt
     </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.ChangedAt)
    </dd>
     @{
         if (isSoftDeleteEntity)
         {
             <dt class="col-sm-2">
                 @Resources.Domain.Common.DeletedBy
             </dt>
             <dd class="col-sm-10">
                 @Html.DisplayFor(model => model.DeletedBy)
             </dd>
             <dt class="col-sm-2">
                 @Resources.Domain.Common.DeletedAt
             </dt>
             <dd class="col-sm-10">
                 @Html.DisplayFor(model => model.DeletedAt)
             </dd>
         }
     }
</dl>