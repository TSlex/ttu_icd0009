@model Domain.StudentHomeWork

@{
    ViewData["Title"] = "Details";
}

<h3 class="d-flex" style="justify-content: space-between">
    @Model.HomeWork.Title
</h3>
<hr>
<h4>@Model.HomeWork.Description</h4>
<h5 class="text-muted mt-3">Ansvered: @Model.AnswerDateTime</h5>
<h5 class="text-muted">Due: @Model.HomeWork.Deadline</h5>
<hr>
<h5 class="text-muted">@Model.HomeWork.Subject.SubjectTitle</h5>
<h5 class="text-muted">@Model.HomeWork.Subject.SubjectCode</h5>

<div class="row text-center justify-content-center">
    <div class="col-md-6">
        <h4>Your answer</h4>
        <hr>
        <h5>@Model.StudentAnswer</h5>
        <hr>
        <h5>Checked: @(Model.IsChecked ? "true" : "false")</h5>
        <h5>Accepted: @(Model.IsAccepted ? "true" : "false")</h5>
    </div>
</div>

<div class="justify-content-center d-flex mt-5">
    <a class="btn btn-primary mr-1" asp-action="Edit" asp-controller="StudentHomeWorks" asp-route-id="@Model.Id">Edit</a>
    <a class="btn btn-secondary" asp-action="Details" asp-controller="Subjects" asp-route-id="@Model.StudentSubject.SubjectId">Back to List</a>
</div>
