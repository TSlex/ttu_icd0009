    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
            <form class="card card-sm" asp-action="Search" asp-controller="Subjects" method="post">
                <div class="d-flex align-items-center" style="padding: 10px">
                    <div class="col-auto">
                        <i class="fa fa-search h4 text-body"></i>
                    </div>
                    <div class="col">
                        <input class="form-control form-control form-control-borderless" type="search" 
