@using Extensions
@model Domain.Subject

@{
    ViewData["Title"] = "Details";

    var studentSubject = Model.StudentSubjects.FirstOrDefault(subject => subject.StudentId == User.UserId() && subject.DeletedAt == null);

//    var studentHomeworkGrades = studentSubject?.IsAccepted ?? false ? Model.StudentSubjects.SelectMany(ssb => ssb.StudentHomeWorks).Select(work => work.Grade).ToList() : new List<int>();
}

@{
    if (!studentSubject?.IsAccepted ?? false)
    {
        <div class="alert alert-info text-center" role="alert" style="margin-bottom: 20px !important;">
            You have enrolled to subject. Wait until teacher accepts you.
        </div>
    }
}

<h1 class="card-title">@Model.SubjectTitle</h1>
<h4 class="card-subtitle mb-2 text-muted">@Model.SubjectCode</h4>
<hr>
<h4 class="card-subtitle mb-2 text-muted">Semester: @Model.Semester.Title</h4>
<h4 class="card-subtitle mb-2 text-success">Teacher: @Model.Teacher.FirstLastName</h4>

@{
    if (studentSubject?.IsAccepted ?? false)
    {
        <hr>
        <h4 class="card-subtitle mb-2 text-muted">Grade: @(studentSubject!.Grade >= 0 ? studentSubject.Grade.ToString() : "Not graded")</h4>
@*          <h4 class="card-subtitle mb-2 text-muted">Homework grades: @(studentHomeworkGrades.Count > 0 ? studentHomeworkGrades.Average().ToString() : "Not graded")</h4> *@
    }
}

<h3 class="card-subtitle mb-2 mt-5">Students</h3>
<table class="table">
    <tbody>
    <tr>
        <td>Participants: </td>
        <td class="w-75">@Model.StudentSubjects.Count(subject => subject.IsAccepted)</td>
    </tr>
    </tbody>
</table>

@{
    if (studentSubject?.IsAccepted ?? false)
    {
        <a class="btn btn-primary" asp-controller="StudentSubjects" asp-action="Index" asp-route-subjectId="@Model.Id">View all</a>
    }
}
@{
    if (studentSubject?.IsAccepted ?? false)
    {
        <h3 class="card-subtitle mb-2 mt-5">Homeworks</h3>
        <table class="table">
            <thead>
            <tr>
                <th>Title</th>
                <th>Deadline</th>
                <th>Is accepted?</th>
                <th>Is checked?</th>
                <th>Grade</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var homework in @Model.HomeWorks)
            {
                var studentHomework = homework.StudentHomeWorks.FirstOrDefault(work => work.HomeWorkId == homework.Id
                                                                                       && work.StudentSubject.StudentId == User.UserId());

                <tr>
                    <td>@homework.Title</td>
                    <td>@homework.Deadline</td>
                    <td>@(studentHomework?.IsAccepted ?? false ? "True" : "False")</td>
                    <td>@(studentHomework?.IsChecked ?? false ? "True" : "False")</td>
                    <td>@((studentHomework?.Grade ?? -1) >= 0 ? (studentHomework?.Grade ?? -1).ToString() : "Not graded")</td>
                    @{
                        if (studentHomework?.IsAccepted ?? false)
                        {
                            <td class="text-right">
                                <span class="btn btn-success fa fa-check"></span>
                            </td>
                        }
                        else if (studentHomework == null)
                        {
                            <td class="text-right">
                                <a asp-controller="StudentHomeWorks"
                                   asp-action="Create"
                                   asp-route-homeworkId="@homework.Id"
                                   asp-route-studentSubjectId="@studentSubject.Id"
                                   class="btn btn-warning fa fa-pencil">
                                </a>
                            </td>
                        }
                        else
                        {
                            <td class="text-right">
                                <a asp-controller="StudentHomeWorks"
                                   asp-action="Details"
                                   asp-route-id="@studentHomework.Id"
                                   class="btn btn-info fa fa-pencil">
                                </a>
                            </td>
                        }
                    }
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        if (studentSubject == null)
        {
            <form asp-controller="StudentSubjects" asp-action="RegisterToSubject">
                <div class="text-center">
                    <button class="btn btn-primary w-25">Enrol me!</button>
                    <input type="hidden" asp-for="Id">
                </div>
            </form>
        }
        else if (!studentSubject.IsAccepted)
        {
            <form asp-controller="StudentSubjects" asp-action="CancelRegistration">
                <div class="text-center">
                    <button class="btn btn-warning w-25">Cancel registration!</button>
                    <input type="hidden" asp-for="Id">
                </div>
            </form>
        }
    }
}