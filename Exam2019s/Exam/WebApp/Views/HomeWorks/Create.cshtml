@model Domain.HomeWork

@{
    ViewData["Title"] = "Create";
}

<h2 class="text-center">@Model.Subject.SubjectTitle</h2>
<h4 class="text-center text-muted">New homework</h4>

<div class="row text-center justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            
            <partial name="_CreateEdit"/>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
                <a asp-action="Details" asp-controller="Subjects" asp-route-id="@Model.Subject.Id" class="btn btn-secondary">Return</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}