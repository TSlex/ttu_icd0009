@model IEnumerable<Domain.ChatRoom>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ChatRoomTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastMessageValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastMessageDateTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ChatRoomTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastMessageValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastMessageDateTime)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ChatRoomId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ChatRoomId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ChatRoomId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
