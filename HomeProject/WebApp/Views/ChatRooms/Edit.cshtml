@model BLL.App.DTO.ChatRoom

@{
    ViewData["Title"] = Resourses.Views.Common.EditHeader;
}

<div class="chat_section">
    <div class="row d-flex justify-content-center">
        <div class="col-md-4 text-center">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                
                <input type="hidden" asp-for="Id">
                
                <div class="form-group">
                    <label asp-for="ChatRoomTitle" class="control-label"></label>
                    <input asp-for="ChatRoomTitle" class="form-control"/>
                    <span asp-validation-for="ChatRoomTitle" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <input type="submit" value="@Resourses.Views.Common.SaveButton" class="btn btn-success"/>
                    <a asp-action="Details" asp-controller="ChatRooms" asp-route-id="@Model.Id" class="btn btn-secondary">
                        @Resourses.Views.Common.CancelButton
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}