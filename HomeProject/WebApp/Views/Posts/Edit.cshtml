@model BLL.App.DTO.Post

@{
    ViewData["Title"] = @Resourses.Views.Posts.Posts.EditHeader + " \"" + Model.PostTitle + "\"";
}

<h4 class="text-center">@ViewData["Title"]</h4>
<br>
<div class="post_create">
    <div class="row justify-content-center text-center">
        <div class="col-md-4">
            <form asp-action="Edit">
                <input type="hidden" asp-for="Id"/>
                <partial name="_PostCreateEdit"/>
                <div class="form-group">
                    <input type="submit" value="@Resourses.Views.Common.SaveButton" class="btn btn-success"/>
                    <a asp-action="Return" asp-controller="Url" asp-route-returnUrl="@Model.ReturnUrl" 
                       class="btn btn-secondary">@Resourses.Views.Common.CancelButton</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}