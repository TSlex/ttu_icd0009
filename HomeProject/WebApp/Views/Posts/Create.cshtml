@model BLL.App.DTO.Post

@{
    ViewData["Title"] = Resourses.Views.Posts.Posts.CreateHeader;
}

<h4 class="text-center">@ViewData["Title"]</h4>
<br>
<div class="post_create">
    <div class="row justify-content-center text-center">
        <div class="col-md-4">
            <form asp-action="Create">
                <partial name="_PostCreateEdit"/>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">@Resourses.Views.Common.CreateButton</button>
                    <button asp-action="Return" asp-controller="Url" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-secondary">
                        @Resourses.Views.Common.CancelButton
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}