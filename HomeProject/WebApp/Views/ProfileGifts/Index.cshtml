@model IEnumerable<Domain.ProfileGift>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Profile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gift)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Profile.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gift.GiftId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProfileGiftId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProfileGiftId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProfileGiftId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
