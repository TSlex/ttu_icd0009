@model BLL.App.DTO.Comment

@{
    ViewData["Title"] = Resourses.Views.Common.EditHeader;
}

<div class="chat_section">
    <div class="row d-flex align-items-center flex-column">
        <div class="card mb-2" id="image-miniature" style="width: 16rem; user-select: none;">
            @{
                if (Model.Post!.PostImageId != null)
                {
                    <img src="/images/@Model.Post!.PostImageId" alt="" class="card-img" id="" draggable="false"/>
                }
            }
        </div>
        <div class="col-md-6 text-center">
            <form asp-action="Edit">
                <input type="hidden" asp-for="Id">
                <partial name="_CommentCreateEdit"/>

                <div class="form-group">
                    <input type="submit" value="@Resourses.Views.Common.SaveButton" class="btn btn-success"/>
                    <a asp-action="Return" asp-controller="Url" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-secondary">
                        @Resourses.Views.Common.CancelButton
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}