@model WebApp.Controllers.ChatMembersController.ChatMemberRoleModel

@{
    ViewData["Title"] = Resourses.Views.Common.EditHeader;
}

<div class="chat_section">
    <div class="row d-flex justify-content-center">
        <div class="col-md-4 text-center">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ChatMember.ChatRoleId" class="control-label">@Resourses.BLL.App.DTO.ChatMembers.ChatMembers.ChatRole</label>
                    <select asp-for="@Model.ChatMember.ChatRoleId" class="form-control">
                        @{
                            if (Model.ChatRoles.Any())
                            {
                                foreach (var chatRole in Model.ChatRoles!)
                                {
                                    <option value="@chatRole.Id">@chatRole.RoleTitleValue</option>
                                }
                            }
                        }
                    </select>
                </div>

                <input type="hidden" asp-for="ChatMember.Id" name="Id" id="Id">
                <input type="hidden" asp-for="ChatMember.Id">

                <div class="form-group">
                    <input type="submit" value="@Resourses.Views.Common.SaveButton" class="btn btn-success"/>
                    <a asp-action="Index" asp-controller="ChatMembers"
                       asp-route-chatRoomId="@Model.ChatMember.ChatRoomId" class="btn btn-secondary">
                        @Resourses.Views.Common.CancelButton
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}