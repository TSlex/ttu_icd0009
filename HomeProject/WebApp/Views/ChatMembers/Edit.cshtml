@model WebApp.Controllers.ChatMembersController.ChatMemberRoleModel

@{
    ViewData["Title"] = "Edit";
}

<div class="chat_section">
    <div class="row d-flex justify-content-center">
        <div class="col-md-4 text-center">
            <form asp-action="Edit">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ChatMember.ChatRoleId" class="control-label"></label>
                    <select asp-for="ChatMember.ChatRoleId" class="form-control">
                        @{
                            foreach (var chatRole in Model.ChatRoles)
                            {
                                <option value="@chatRole.Id">@chatRole.RoleTitle</option>
                            }
                        }
                    </select>
                </div>
                
                <input type="hidden" asp-for="ChatMember.Id" name="Id" id="Id">
                <input type="hidden" asp-for="ChatMember.Id">

                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-primary"/>
                    <a asp-action="Index" asp-controller="ChatMembers"
                       asp-route-chatRoomId="@Model.ChatMember.ChatRoomId" class="btn btn-primary">
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}