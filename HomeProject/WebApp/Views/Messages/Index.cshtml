@model IEnumerable<DAL.App.DTO.Message>

@{
    ViewData["Title"] = "Messages";
    var odd = false;
}

<div class="chat_section">
    @foreach (var item in Model.OrderBy(message => message.MessageDateTime))
    {
        <div class="message @(odd ? "active": "")">@item.MessageValue</div>
        odd = !odd;
    }

    <div class="row d-flex justify-content-center">
        <a asp-action="Create" class="btn btn-primary">Create</a>
    </div>

