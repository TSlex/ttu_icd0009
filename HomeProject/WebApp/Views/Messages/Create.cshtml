@model BLL.App.DTO.Message

@{
    ViewData["Title"] = Resourses.Views.Common.CreateHeader;
}

<div class="chat_section">
    <div class="row d-flex justify-content-center">
        <div class="col-md-6 text-center">
            <form asp-action="Create">
                <div asp-validation-summary="All" class="text-danger"></div>
                <partial name="_MessageCreateEdit"/>

                <input type="submit" class="btn btn-success" value="@Resourses.Views.Common.CreateButton">
                <a type="button" asp-action="Details" asp-controller="ChatRooms" asp-route-id="@Model.ChatRoomId" class="btn btn-secondary">
                    @Resourses.Views.Common.CancelButton
                </a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}