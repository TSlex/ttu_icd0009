@model IEnumerable<BLL.App.DTO.Image>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HeightPx)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WidthPx)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaddingTop)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaddingRight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaddingBottom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaddingLeft)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChangedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChangedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeletedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeletedAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ImageUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HeightPx)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WidthPx)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaddingTop)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaddingRight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaddingBottom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaddingLeft)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChangedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChangedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeletedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeletedAt)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
