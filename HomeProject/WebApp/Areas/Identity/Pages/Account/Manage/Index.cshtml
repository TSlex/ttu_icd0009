@page
@using Domain.Enums
@model IndexModel
@{
    ViewData["Title"] = Resourses.Views.Identity.Identity.ProfileHeader;
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4 class="">@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage"/>
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" class="" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.ProfileFullName" class="control-label"></label>
                <input asp-for="Input.ProfileFullName" class="form-control"/>
                <span asp-validation-for="Input.ProfileFullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.UserName"></label>
                <input asp-for="Input.UserName" class="form-control"/>
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ProfileWorkPlace" class="control-label"></label>
                <input asp-for="Input.ProfileWorkPlace" class="form-control"/>
                <span asp-validation-for="Input.ProfileWorkPlace" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ProfileAbout" class="control-label"></label>
                <textarea asp-for="Input.ProfileAbout" class="form-control form-"></textarea>
                <span asp-validation-for="Input.ProfileAbout" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control"/>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.ProfileGender" class="control-label"></label>
                <select asp-for="Input.ProfileGender" asp-items="Html.GetEnumSelectList<ProfileGender>()" class="form-control">
                </select>
            </div>
            
            <div class="form-group d-none" id="profile-gender-own">
                <label asp-for="Input.ProfileGenderOwn"></label>
                <input asp-for="Input.ProfileGenderOwn" class="form-control"/>
                <span asp-validation-for="Input.ProfileGenderOwn" class="text-danger"></span>
            </div>

            <button id="update-profile-button" type="submit" class="btn btn-success align-self-center">@Resourses.Views.Common.SaveButton</button>
        </form>
    </div>
</div>

@section Scripts {
     <partial name="_ValidationScriptsPartial"/>
     <script src="~/js/Identity/profile-preferences.js"></script>
 }