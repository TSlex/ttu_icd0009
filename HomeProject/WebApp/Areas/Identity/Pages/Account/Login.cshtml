@page
@model LoginModel

@{
    ViewData["Title"] = Resourses.Views.Identity.Identity.LoginHeader;
}

<h1 class="text-center">@ViewData["Title"]</h1>
<div class="row justify-content-center text-center">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <hr/>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email">@Resourses.BLL.App.DTO.Profiles.Profiles.Email</label>
                    <input asp-for="Input.Email" class="form-control"/>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password">@Resourses.BLL.App.DTO.Profiles.Profiles.Password</label>
                    <input asp-for="Input.Password" class="form-control"/>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe"/>
                            @* @Html.DisplayNameFor(m => m.Input.RememberMe) *@
                            @Resourses.Views.Identity.Identity.RememberMe
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">@Resourses.Views.Shared._Layout.LoginButton</button>
                </div>
                <div class="form-group">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">@Resourses.Views.Identity.Identity.ForgotPassword</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">@Resourses.Views.Identity.Identity.RegisterNew</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}