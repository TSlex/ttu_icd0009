@page
@model RegisterModel
@{
    ViewData["Title"] = @Resourses.Views.Identity.Identity.RegisterHeader;
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="row justify-content-center text-center">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <hr/>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Username">@Resourses.BLL.App.DTO.Profiles.Profiles.UserName</label>
                <input asp-for="Input.Username" class="form-control"/>
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email">@Resourses.BLL.App.DTO.Profiles.Profiles.Email</label>
                <input asp-for="Input.Email" class="form-control"/>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password">@Resourses.BLL.App.DTO.Profiles.Profiles.Password</label>
                <input asp-for="Input.Password" class="form-control"/>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword">@Resourses.BLL.App.DTO.Profiles.Profiles.PasswordConfirm</label>
                <input asp-for="Input.ConfirmPassword" class="form-control"/>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">@Resourses.Views.Shared._Layout.RegisterButton</button>
            <p class="mt-3">
                <a asp-page="./login" asp-route-returnUrl="@Model.ReturnUrl">@Resourses.Views.Identity.Identity.AlreadyHave</a>
            </p>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}