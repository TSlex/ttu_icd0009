@model BLL.App.DTO.Gift

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Edit</h1>
<hr/>
<div class="row text-center align-items-center d-flex flex-column">
    <div class="card mb-2" id="image-miniature" style="width: 20rem; user-select: none; visibility: hidden" draggable="false">
        <img
            @{
                if (Model.GiftImage?.OriginalImageUrl != null)
                {
                    @Html.Raw("src= \"~/localstorage/" + @Model.GiftImage.OriginalImageUrl + "\"")
                }
                else
                {
                    @Html.Raw("src=\"#\"")
                }
            }
            alt="" class="card-img" id="render_image"/>
    </div>


    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="GiftCode" class="control-label"> </label>
                <input asp-for="GiftCode" class="form-control"/>
                <span asp-validation-for="GiftCode" class="text-danger"> </span>
            </div>
            <div class="form-group">
                <label asp-for="GiftName" class="control-label"> </label>
                <input asp-for="GiftName" class="form-control"/>
                <span asp-validation-for="GiftName" class="text-danger"> </span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"> </label>
                <input asp-for="Price" class="form-control"/>
                <span asp-validation-for="Price" class="text-danger"> </span>
            </div>

            <div class="custom-file mb-3">
                <input type="file" asp-for="GiftImage!.ImageFile" id="ImageFile" accept=".jpeg, .png, .jpg" class="custom-file-input">
                <label class="custom-file-label" style="overflow: hidden"> </label>
            </div>

            <input type="hidden" asp-for="GiftImage!.PaddingTop" id="PaddingTop"/>
            <input type="hidden" asp-for="GiftImage!.PaddingRight" id="PaddingRight"/>
            <input type="hidden" asp-for="GiftImage!.PaddingBottom" id="PaddingBottom">
            <input type="hidden" asp-for="GiftImage!.PaddingLeft" id="PaddingLeft"/>
            <input type="hidden" asp-for="GiftImage!.HeightPx" id="HeightPx"/>
            <input type="hidden" asp-for="GiftImage!.WidthPx" id="WidthPx"/>

            <input type="hidden" asp-for="GiftImage!.OriginalImageUrl"/>
            <input type="hidden" asp-for="GiftImage!.ImageFor"/>
            <input type="hidden" asp-for="GiftImage!.ImageType"/>

            <input type="hidden" asp-for="Id"/>
            <input type="hidden" asp-for="GiftImage!.Id"/>

            <div class="form-group">
                <a asp-action="Index" class="btn btn-primary ">Back to List</a>
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script type="text/javascript" src="~/js/images/image-miniature.js"></script>
    <script>
                    if ($('#render_image').src === "#"){
                                        $('#image-miniature').css('visibility', 'hidden');
                                    }
                   
                    
                    $('#ImageFile').on('change',function(){
                        //get the file name
                        let fileName = $(this).val().replace('C:\\fakepath\\', "");
                        //replace the "Choose a file" label
                        $(this).next('.custom-file-label').html(fileName);
                    })
                    
                    function readURL(input) {
                      if (input.files && input.files[0]) {
                        let reader = new FileReader();
                        
                        reader.onload = function(e) {
                            let image = new Image();
                            image.src = e.target.result;
                            
                            image.onload = function(){
                                $('#HeightPx').attr('value', image.height);
                                $('#WidthPx').attr('value', image.width);  
                            }
    
                            $('#render_image').attr('src', e.target.result);
                            $('#image-miniature').css('visibility', 'visible');
        }
    
        reader.readAsDataURL(input.files[0]); // convert to base64 string
        }
        }
    
        $("#ImageFile").change(function() {
        readURL(this);
        });
        </script>
}