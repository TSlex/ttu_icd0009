@model IEnumerable<BLL.App.DTO.ChatRoom>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ChatRoomTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Messages)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ChatMembers)
        </th>
        <th>
            IS DELETED?
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChatRoomTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Messages!.Count)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChatMembers!.Count)
            </td>
            <td>
                @(item.DeletedAt != default)
            </td>
            <td>
                <partial name="_IndexControls" model="@item"/>
            </td>
        </tr>
    }
    </tbody>
</table>