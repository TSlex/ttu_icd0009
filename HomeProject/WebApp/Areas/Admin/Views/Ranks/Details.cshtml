@model BLL.App.DTO.Rank

@{
    ViewData["Title"] = Resourses.Views.Common.DetailsHeader;
}

<h1>@ViewData["Title"]</h1>
<hr/>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RankTitleId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RankTitleId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RankDescriptionId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RankDescriptionId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PreviousRankId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PreviousRankId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NextRankId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NextRankId)
        </dd>
    </dl>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RankTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RankTitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RankDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RankDescription)
        </dd>
    </dl>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RankCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RankCode)
        </dd>
        <dt class="col-sm-2" >
            @Html.DisplayNameFor(model => model.RankColor)
        </dt>
        <dd class="col-sm-10" style="background-color: @(Model.RankColor)">
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RankTextColor)
        </dt>
        <dd class="col-sm-10" style="background-color: @(Model.RankTextColor)">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RankIcon)
        </dt>
        <dd class="col-sm-10">
            @{
                var icons = Model.RankIcon?.Split(";").Where(s => s != "").ToList();
                if (icons != null)
                {
                    foreach (var icon in icons)
                    {
                        <icon class="fa fa-@icon"></icon>
                    }
                }
            }
        </dd>
    </dl>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MinExperience)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MinExperience)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MaxExperience)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaxExperience)
        </dd>
    </dl>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedBy)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedBy)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ChangedBy)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ChangedBy)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ChangedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ChangedAt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DeletedBy)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DeletedBy)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DeletedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DeletedAt)
        </dd>
    </dl>
</div>
<hr/>
<partial name="_DetailsControls"/>