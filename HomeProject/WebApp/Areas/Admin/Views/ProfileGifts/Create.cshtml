@model BLL.App.DTO.ProfileGift

@{
    ViewData["Title"] = Resourses.Views.Common.CreateHeader;
}

<h1 class="text-center">@ViewData["Title"]</h1>
<hr/>
<div class="row text-center justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProfileId" class="control-label"></label>
                <input asp-for="ProfileId" class="form-control"/>
                <span asp-validation-for="ProfileId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GiftId" class="control-label"></label>
                <input asp-for="GiftId" class="form-control"/>
                <span asp-validation-for="GiftId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FromProfileId" class="control-label"></label>
                <input asp-for="FromProfileId" class="form-control"/>
                <span asp-validation-for="FromProfileId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message" class="control-label"></label>
                <textarea asp-for="Message" rows="3" class="form-control"></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control"/>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GiftDateTime" class="control-label"></label>
                <input asp-for="GiftDateTime" class="form-control"/>
                <span asp-validation-for="GiftDateTime" class="text-danger"></span>
            </div>
            <partial name="_CreateControls"/>
        </form>
    </div>
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}