@model IEnumerable<BLL.App.DTO.ProfileGift>

@{
    ViewData["Title"] = Resourses.Views.Common.IndexHeader;
}

<h1 class="text-center">@ViewData["Title"]</h1>
<p class="text-center" style="font-size: 30px">
    <a asp-action="Create" class="far fa-plus-square"></a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProfileId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GiftId)
        </th>
        <th>
            @Resourses.Views.Images.Images.Preview
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProfileId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiftId)
            </td>
            <td>
                <div id="image-miniature" style="width: 5rem; user-select: none;">
                    <img src="/images/@(item.Gift!.GiftImageId)" alt="image"
                         class="card-img" id="render_image" draggable="false"/>
                </div>
            </td>
            <td>
                <partial name="_IndexControls" model="@item"/>
            </td>
        </tr>
    }
    </tbody>
</table>