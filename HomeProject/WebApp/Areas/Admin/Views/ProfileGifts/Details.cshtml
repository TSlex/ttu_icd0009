@model BLL.App.DTO.ProfileGift

@{
    ViewData["Title"] = Resourses.Views.Common.DetailsHeader;
}

<h1>@ViewData["Title"]</h1>
<hr/>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProfileId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProfileId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GiftId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GiftId)
        </dd>
    </dl>
    <hr/>
    <div class="mb-2" id="image-miniature" style="width: 20rem; user-select: none;">
        @{
            if (Model.Gift!.GiftImageId != null)
            {
                <img src="/images/@(Model.Gift!.GiftImageId)" alt="image"
                     class="card-img" id="render_image" draggable="false"/>
            }
            else
            {
                <img alt="" class="card-img" id="render_image" draggable="false"/>
            }
        }
    </div>
    <hr/>

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GiftDateTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GiftDateTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FromProfileId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FromProfileId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Message)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Message)
        </dd>
    </dl>
    <hr/>
    <partial name="_MetaSection"/>
</div>
<hr/>
<partial name="_DetailsControls"/>