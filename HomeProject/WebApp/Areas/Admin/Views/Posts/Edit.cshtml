@model BLL.App.DTO.Post

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Edit</h1>
<hr/>
<div class="row text-center align-items-center d-flex flex-column">
    <div class="card mb-2" id="image-miniature" style="width: 20rem; user-select: none;" draggable="false">

        @{
            if (Model.PostImage?.OriginalImageUrl != null)
            {
                <img src="@Url.Content("~/localstorage" + @Model.PostImage.OriginalImageUrl)" alt="" class="card-img" id="render_image"/>
            }
            else
            {
                <img src="#" alt="" class="card-img" id="render_image"/>
            }
        }
    </div>
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="custom-file mb-3">
                <input type="file" asp-for="PostImage!.ImageFile" id="ImageFile" accept=".jpeg, .png, .jpg" class="text-left custom-file-input">
                <label class="custom-file-label" style="overflow: hidden"> </label>
            </div>
            <div class="form-group">
                <label asp-for="ProfileId" class="control-label"></label>
                <input asp-for="ProfileId" class="form-control"/>
                <span asp-validation-for="ProfileId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostTitle" class="control-label"></label>
                <input asp-for="PostTitle" class="form-control"/>
                <span asp-validation-for="PostTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostDescription" class="control-label"></label>
                <input asp-for="PostDescription" class="form-control"/>
                <span asp-validation-for="PostDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostPublicationDateTime" class="control-label"></label>
                <input asp-for="PostPublicationDateTime" class="form-control"/>
                <span asp-validation-for="PostPublicationDateTime" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="PostImage!.PaddingTop" id="PaddingTop"/>
            <input type="hidden" asp-for="PostImage!.PaddingRight" id="PaddingRight"/>
            <input type="hidden" asp-for="PostImage!.PaddingBottom" id="PaddingBottom">
            <input type="hidden" asp-for="PostImage!.PaddingLeft" id="PaddingLeft"/>
            <input type="hidden" asp-for="PostImage!.HeightPx" id="HeightPx"/>
            <input type="hidden" asp-for="PostImage!.WidthPx" id="WidthPx"/>

            <input type="hidden" asp-for="PostImage!.OriginalImageUrl"/>
            <input type="hidden" asp-for="PostImage!.ImageUrl"/>
            <input type="hidden" asp-for="PostImage!.ImageFor"/>
            <input type="hidden" asp-for="PostImage!.ImageType"/>

            <input type="hidden" asp-for="Id"/>
            <input type="hidden" asp-for="PostImageId"/>
            <input type="hidden" asp-for="PostImage!.Id"/>

            <div class="form-group">
                <a asp-action="Index" class="btn btn-primary ">Back to List</a>
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script type="text/javascript" src="~/js/images/image-miniature.js"></script>
    <script>
                        
                        if ($('#render_image').attr('src') === "#"){
                            $('#image-miniature').css('visibility', 'hidden');
                        }
                       
                        
                        $('#ImageFile').on('change',function(){
                            //get the file name
                            let fileName = $(this).val().replace('C:\\fakepath\\', "");
                            //replace the "Choose a file" label
                            $(this).next('.custom-file-label').html(fileName);
                        })
                        
                        function readURL(input) {
                          if (input.files && input.files[0]) {
                            let reader = new FileReader();
                            
                            reader.onload = function(e) {
                                let image = new Image();
                                image.src = e.target.result;
                                
                                image.onload = function(){
                                    $('#HeightPx').attr('value', image.height);
                                    $('#WidthPx').attr('value', image.width);  
                                }
        
                                $('#render_image').attr('src', e.target.result);
                                $('#image-miniature').css('visibility', 'visible');
            }
        
            reader.readAsDataURL(input.files[0]); // convert to base64 string
            }
            }
        
            $("#ImageFile").change(function() {
            readURL(this);
            });
            </script>
}